@model JobOffer
@{
    ViewData["Title"] = "Details";
}

<div class="row page-box">
    <div class="col-sm-12">
        <h3>@Model.Title</h3>
        <h5>Overview</h5>
        <p>@Model.Overview</p>
        <h5>Salary</h5>
        <p>@Model.SalaryFrom - @Model.SalaryTo @Model.Currency</p>
        <h5>Specialization</h5>
        <p>@Model.Specialization</p>
        <h5>Location</h5>
        <p>@Model.Location</p>
        <h5>Added on</h5>
        <p>@Model.AddedOn.ToShortDateString()</p>
        <h5>Description</h5>
        <p>@Model.Description</p>
    </div>
    <div class="col-sm-12">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Full Name</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Phone</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.JobApplications.Count == 0)
                {
                    <tr>
                        <td>There are no applications in database for this offer.</td>
                        <td></td>
                        <td></td>
                    </tr>
                }
                @foreach (JobApplication jobApplication in Model.JobApplications)
                {
                    <tr>
                        <td>@Html.ActionLink(jobApplication.FirstName + " " + jobApplication.LastName, "Index", "Home")</td>
                        <td>@jobApplication.EmailAddress</td>
                        <td>@jobApplication.PhoneNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-12 d-inline-block">
        @Html.ActionLink("Apply", "Create", "JobApplication", new { Model.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Edit", "Edit", "JobOffer", new { Model.Id }, new { @class = "btn btn-primary" })
        @using (Html.BeginForm("Delete", "JobOffer", new { Model.Id }, FormMethod.Post, null, null))
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Delete</button>
        }
    </div>
    @Html.ActionLink("Go back to Job Offers", "Index", "JobOffer", null, new { @class = "btn btn-primary" })
</div>
