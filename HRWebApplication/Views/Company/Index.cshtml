@model List<Company>
@{
    ViewData["Title"] = "Index";
}

<div>
    <h2 class="h3 d-inline-block">List of all companies</h2>
    <span class="badge badge-pill badge-primary align-top">
        @Model.Count
    </span>
</div>
<div>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Company Name</th>
                <th style="width: 20px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Company company in Model)
            {
                <tr>
                    <td>@company.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", "Company", new { company.Id })"
                           class="text-primary">
                            <i class="fas fa-edit"
                               title="Edit"></i>
                        </a>
                    </td>
                </tr>
            }
            <tr>
                <td>@Html.ActionLink("Add new company", "Create", "Company", null, new { @class = "btn btn-primary" })</td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>