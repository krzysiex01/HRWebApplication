@model List<Company>
@{
    ViewData["Title"] = "Index";
}

<h1>List of all companies</h1>
<div>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Company Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Company company in Model)
            {
                <tr>
                    <td>@company.Name</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Company", new { company.Id }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
            <tr>
                <td>@Html.ActionLink("Add new company", "Create", "Company", null, new { @class = "btn btn-primary" })</td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>